<div class="homebg1">


<%- include('partials/header1') %>
<div class="container mt-5 ">
  <h1>Register</h1>

  <br>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">


          <form action="/register" method="POST">
            <div class="form-group" >
              <div class="row">
            <div class="col-sm-1">  <i class="fa-solid fa-address-card fa-lg icon "></i>  </div>
            <div class="col-sm-5">  <input type="text" class="form-control" name="Firstname" placeholder="First name"></div>
            <div class="col-sm-1"><i class="fa-regular fa-address-card fa-lg icon"></i></div>
            <div class="col-sm-5"><input type="text" class="form-control" name="Lastname" placeholder="Last name">  </div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <i class="fa-solid fa-at fa-lg icon"></i>
                </div>
                <div class="col-sm-11">
                  <input type="email" class="form-control" name="username" placeholder="Email">
                </div>
              </div>
            </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-1">
                    <i class="fa-solid fa-lock icon fa-lg"></i>
                  </div>
                  <div class="col-sm-11">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="row">
                  <div class="col-sm-1">
                    <i class="fa-solid fa-lock icon fa-lg"></i>
                  </div>
                  <div class="col-sm-11">
                    <input type="password" class="form-control" name="password1" placeholder="Confirm Password">
                  </div>
                </div>
              </div>

            <button type="submit" class="btn btn-dark submit-button">Register</button>
          </form>
        <span style='color:red'>*Please fill out all the fields.</span>
        </div>
      </div>
    </div>

    <br>
      <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <a class="socialBtnPad btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="iconOrg fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
        <div class="card-body">
          <a class="socialBtnPad btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
            <i class="iconOrg fab fa-facebook"></i>
            Sign In with Facebook
          </a>
        </div>
      </div>
    </div>
    </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Error</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Please fill all the fields to create your Taskify account
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Error</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Passwords does not match!
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>




    <script>
  document.querySelector(".submit-button").addEventListener("click", function(event) {
    const Firstname = document.querySelector("input[name='Firstname']").value;
    const Lastname = document.querySelector("input[name='Lastname']").value;
    const username = document.querySelector("input[name='username']").value;
    const password = document.querySelector("input[name='password']").value;
    const password1 = document.querySelector("input[name='password1']").value;

    if (!Firstname || !Lastname || !username || !password || !password1) {
      event.preventDefault(); // prevent form submission
      // show the modal
      // you can use any JavaScript library, such as bootstrap, to show the modal
      $('#myModal').modal('show');
    }
    if(password != password1){
      $('#myModal1').modal('show');
    }
  });
</script>

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '{your-app-id}',
      cookie     : true,
      xfbml      : true,
      version    : '{api-version}'
    });

    FB.AppEvents.logPageView();

  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
