<div class="homebg1">


<%- include('partials/header1') %>

<div class="container mt-5">
  <h1>Taskify login</h1>
  <br>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">

        <!-- Makes POST request to /login route -->
        <form action="/login" method="POST">
          <div class="form-group">
            <div class="row">
              <div class="col-sm-1">
                <i class="fa-solid fa-at fa-lg icon"></i>
              </div>
              <div class="col-sm-11">
                <input type="email" class="form-control" name="username" placeholder="Email">
              </div>
            </div>
          </div>
            <div class="form-group">
              <div class="row">
                <div class="col-sm-1">
                  <i class="fa-solid fa-lock icon fa-lg"></i>
                </div>
                <div class="col-sm-11">
                  <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
              </div>
            </div>
          <button type="submit" class="btn btn-dark">Login</button>
        </form>
      </div>
    </div>
  </div>
  <br>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <a class=" socialBtnPad btn-block btn-social btn-google" href="/auth/google" role="button">
          <i class="iconOrg fab fa-google"></i>
          Sign In with Google
        </a>
      </div>
      <div class="card-body">
        <a class="socialBtnPad btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
          <i class="iconOrg fab fa-facebook"></i>
          Sign In with Facebook
        </a>
      </div>
    </div>
  </div>
</div>
</div>

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '{your-app-id}',
      cookie     : true,
      xfbml      : true,
      version    : '{api-version}'
    });

    FB.AppEvents.logPageView();

  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
